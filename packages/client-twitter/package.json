{
	"name": "@elizaos/client-twitter",
	"version": "0.1.9",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"@elizaos/source": "./src/index.ts",
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@elizaos/core": "workspace:*",
		"agent-twitter-client": "0.0.18",
		"discord.js": "14.16.3",
		"glob": "11.0.0",
		"zod": "3.23.8",
        "@elizaos/plugin-tee-verifiable-log": "workspace:*",
        "heurist": "^0.0.32",
        "uuid": "11.0.3",
        "axios": "^1.7.9",
        "better-sqlite3": "11.6.0",
        "ethers": "6.13.4",
        "@prisma/client": "6.3.1"
    },
	"devDependencies": {
		"@vitest/coverage-v8": "1.1.3",
		"tsup": "8.3.5",
		"vitest": "1.1.3",
        "dotenv-cli": "^8.0.0"

	},
	"scripts": {
        "build": "pnpm prisma:generate && tsup --format esm --dts",
		"dev": "tsup --format esm --dts --watch",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
        "prisma:generate": " dotenv -e ../../.env -- npx prisma generate",
        "prisma:push": "dotenv -e ../../.env -- npx prisma db push --force",
        "prisma:migrate": "dotenv -e ../../.env  -- npx prisma migrate dev"

    },
	"peerDependencies": {
		"whatwg-url": "7.1.0"
	}
